<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.b07group47.taamcollectionmanager.HomeFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:rowCount="3">

        <LinearLayout
            android:layout_rowWeight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:id="@+id/buttonAdmin"
                style="@style/ButtonStyle"
                android:text="@string/admin" />
        </LinearLayout>

        <LinearLayout
            android:layout_rowWeight="8"
            android:gravity="center"
            android:layout_width="match_parent">
            <Button
                android:id="@+id/data_table"
                style="@style/ButtonStyle"
                android:text="@string/data_table" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_rowWeight="1"
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <Button
                android:layout_columnWeight="1"
                android:id="@+id/buttonView"
                style="@style/ButtonStyle"
                android:text="@string/view_items"
                android:layout_gravity="fill"
                android:gravity="center"/>

            <Button
                android:layout_columnWeight="1"
                android:id="@+id/buttonSearch"
                style="@style/ButtonStyle"
                android:text="@string/search_items"
                android:layout_gravity="fill"
                android:gravity="center"/>

            <Button
                android:layout_columnWeight="1"
                android:id="@+id/buttonReport"
                style="@style/ButtonStyle"
                android:text="Report"
                android:layout_gravity="fill"
                android:gravity="center"/>

            <Button
                android:layout_columnWeight="1"
                android:id="@+id/buttonAddItem"
                style="@style/ButtonStyle"
                android:text="@string/add_item"
                android:layout_gravity="fill"
                android:gravity="center"/>

            <Button
                android:layout_columnWeight="1"
                android:id="@+id/buttonDeleteItem"
                style="@style/ButtonStyle"
                android:text="@string/delete_item"
                android:layout_gravity="fill"
                android:gravity="center"/>

            <Button
                android:layout_columnWeight="1"
                android:id="@+id/buttonBack"
                style="@style/ButtonStyle"
                android:text="@string/back"
                android:layout_gravity="fill"
                android:gravity="center"/>
        </GridLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
